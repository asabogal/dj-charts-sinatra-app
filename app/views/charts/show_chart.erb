SHOWS A  SPECIFIC CHART
MUST BE LOGGED IN TO VIEW
USE GET BUTTONS TO CREATE NEW CHART / EDIT CHART / DELETE CHART
<!-- /charts/:id or /charts/:slug -->

<h1><%=@chart.name%></h1>
<h2>by <%=@chart.user.username%> </h2>

<%@chart.records.each_with_index do |record, i|%>

<table id="table">
  <tr>
    <th>#</th>
    <th>Title</th>
    <th>Artist</th>
    <th>Label</th>
    <% if logged_in? && @chart.user_id == current_user.id%>
    <th>Edit</th>
    <th>Delete</th>
    <%end%>
  </tr>
  <tr>
    <td><%=i+1%></td>
    <td><%= record.title %></td>
    <td><%= record.artist %></td>
    <td><%= record.label %></td>
    <% if logged_in? && @chart.user_id == current_user.id%>
    <td> <form class="" action="/records/<%=record.id%>/edit" method="GET"> <!-- change to record.title /slug-->
      <input type="submit" value="Edit Record">
    </form>
    </td>
    <td> <form class="" action="/records/delete" method="POST"> <!-- or record.delete ? .destroy ?-->
      <input type="submit" value="Delete Record">
    </form>
    </td>
    <%end%>
    </tr>
  <table>



<%end%>
